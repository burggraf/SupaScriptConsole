{
    "include": [
        "src/**/*"
      ],
      "exclude": ["node_modules/**/*.ts"],
      "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2015",
      "declaration": true,
      "declarationMap": true,
      "outDir": "./dist/main",
      "rootDir": "src",
      "sourceMap": true,

      "strict": true,

      "esModuleInterop": true,
      "moduleResolution": "Node",

      "forceConsistentCasingInFileNames": false,
      "stripInternal": true,
      "allowSyntheticDefaultImports": true
    }
  }